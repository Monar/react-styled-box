{
  "name": "react-styled-box",
  "version": "1.0.2",
  "description": "Styled component with simple mapping to basic position oriented styles",
  "author": "Piotr Tomasz Monarski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Monar/react-styled-box"
  },
  "main": "lib/react-styled-box.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --env=jsdom",
    "test:watch": "jest --watch --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "6.26.0",
    "babel-jest": "21.0.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "enzyme": "2.9.1",
    "enzyme-to-json": "1.5.1",
    "jest": "21.0.2",
    "jest-enzyme": "3.8.2",
    "jest-styled-components": "4.5.0",
    "prop-types": "^15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-test-renderer": "15.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "styled-components": "^2.1.1"
  },
  "peerDependencies": {
    "prop-types": "^15 || ^16",
    "react": "^15 || ^16",
    "styled-components": "^2"
  },
  "keywords": [
    "react",
    "styled-components",
    "component",
    "styled",
    "flexbox",
    "box"
  ],
  "babel": {
    "presets": [
      "react",
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "react",
          "es2015"
        ]
      }
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost"
  }
}
