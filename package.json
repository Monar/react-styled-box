{
  "name": "react-styled-box",
  "version": "1.2.2",
  "description": "Styled component with simple mapping to basic position oriented styles",
  "author": "Piotr Tomasz Monarski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Monar/react-styled-box"
  },
  "main": "lib/react-styled-box.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --env=jsdom",
    "test:watch": "jest --watch --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "6.26.3",
    "babel-jest": "22.4.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "enzyme": "3.3.0",
    "enzyme-to-json": "3.3.4",
    "jest": "22.4.4",
    "jest-enzyme": "6.0.0",
    "jest-styled-components": "5.0.1",
    "prop-types": "^15.5.10",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-test-renderer": "16.3.2",
    "rollup": "^0.59.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-node-resolve": "^3.0.0",
    "styled-components": "^3.2.6"
  },
  "peerDependencies": {
    "prop-types": "^15 || ^16",
    "react": "^15 || ^16",
    "styled-components": "^2 || ^3"
  },
  "keywords": [
    "react",
    "styled-components",
    "component",
    "styled",
    "flexbox",
    "box"
  ],
  "babel": {
    "presets": [
      "react",
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "react",
          "es2015"
        ]
      }
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost"
  }
}
